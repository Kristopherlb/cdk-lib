{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Platform KB Packs Index",
  "type": "object",
  "required": [
    "packs"
  ],
  "properties": {
    "$schema": {
      "type": [
        "string",
        "null"
      ]
    },
    "packs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "version",
          "scope",
          "file"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "scope": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "file": {
            "type": "string"
          }
        }
      }
    }
  }
}
