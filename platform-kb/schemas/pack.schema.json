{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Platform KB Pack",
  "type": "object",
  "required": [
    "pack",
    "rules"
  ],
  "properties": {
    "$schema": {
      "type": [
        "string",
        "null"
      ]
    },
    "pack": {
      "type": "object",
      "required": [
        "id",
        "version",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "severity",
          "services",
          "check"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "rationale": {
            "type": [
              "string",
              "null"
            ]
          },
          "nist_controls": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "resource_kinds": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "services": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "check": {
            "type": "object",
            "required": [
              "type",
              "name"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "aws-config-rule",
                  "internal-check"
                ]
              },
              "name": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
