{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@platform/contracts": ["packages/platform/contracts/src", "packages/contracts/src"],
      "@platform/logger": ["packages/platform/logger/src"],
      "@platform/tagging": ["packages/platform/tagging/src"],
      "@platform/observability": ["packages/platform/observability/src"],
      "@platform/core-engine": ["packages/core-engine/src"],
      "@platform/bindings": ["packages/bindings/src"],
      "@platform/cli": ["packages/cli/src"],
      "@platform/migration": ["packages/migration/src"],
      "@platform/resolver": ["packages/resolver/src"],
      "@platform/services": ["packages/services/src"],
      "@platform/templates": ["packages/templates/src"],
      "@platform/*": ["packages/components/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}