{
  "alarms": {
    "ecs_cluster_high_cpu_utilization": {
      "alarmName": "ECS-Cluster-High-CPU-Utilization",
      "alarmDescription": "ECS cluster CPU utilization is above threshold",
      "metricName": "CPUUtilization",
      "namespace": "AWS/ECS",
      "statistic": "Average",
      "period": 300,
      "evaluationPeriods": 2,
      "threshold": 80,
      "comparisonOperator": "GreaterThanThreshold",
      "treatMissingData": "breaching",
      "alarmActions": ["arn:aws:sns:us-east-1:123456789012:ecs-alerts"],
      "okActions": ["arn:aws:sns:us-east-1:123456789012:ecs-alerts"],
      "dimensions": {
        "ClusterName": "${cluster_name}"
      },
      "tags": {
        "Component": "ecs-cluster",
        "Severity": "warning",
        "Environment": "${environment}"
      }
    },
